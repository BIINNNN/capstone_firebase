<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CountActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/gradation_background"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/wemakeprice_semibold"
            android:text="운동 횟수 설정"
            android:textColor="@color/whisper"
            android:textSize="20dp"
            />


    </LinearLayout>
<!-- 드롭다운 형식 사용부분
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
-->
    <EditText
        android:id="@+id/exer_count"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="운동 횟수를 입력하세요"
        android:inputType="numberSigned" />

    <Button
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/wemakeprice_regular"
        android:text="시작하기" />


</LinearLayout>