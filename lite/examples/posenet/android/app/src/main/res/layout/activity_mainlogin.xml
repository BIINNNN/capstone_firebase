<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainloginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/gradation_background">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_baseline_menu_24"/>



        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/wemakeprice_semibold"
            android:text="부위별"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_navigate_next_24" />



    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="334dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="318dp"
                android:layout_height="119dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/wemakeprice_semibold"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:text="복근\n(Upper body)"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_click_1"
                            android:layout_width="136dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/wemakeprice_regular"
                            android:background="@drawable/button_background"
                            android:text="Click" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="138dp"
                    android:layout_height="127dp"
                    android:layout_marginTop="-8dp"
                    android:src="@drawable/sidejack" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="334dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="318dp"
                android:layout_height="119dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/wemakeprice_semibold"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:text="하체\n(Lower body)"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_click_2"
                            android:layout_width="136dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/wemakeprice_regular"
                            android:background="@drawable/button_background"
                            android:text="Click"
                            android:textSize="14dp" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="168dp"
                    android:layout_height="127dp"
                    android:layout_marginTop="-8dp"
                    android:src="@drawable/squats" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>